{
    "manifest_version": 2,
    "name": "Resume Saver and Cover Letter Generator",
    "description": "This extension lets users save their resume and generate cover letters using ChatGPT",
    "version": "1.0",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus"
    ],
    "content_scripts": [
      {
        "js": ["content.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "web_accessible_resources": [
      "newtab.html"
    ]
  }
  